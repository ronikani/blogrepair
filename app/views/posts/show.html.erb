<div id="post_content">
	<h1 class="title"><%= @post.title %></h1>
	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago
		<% if user_signed_in? %>
		| <%= link_to 'Редактировать', edit_post_path(@post) %> |
		  <%= link_to 'Удалить', post_path(@post), method: :delete, data: { confirm: 'Вы уверены?' } %>
	  <% end %>
	</p>
	<p class="body"><%= @post.body %></p>

	<% if @post.attaches.size > 0 %>
		<% @post.attaches.each do | attach | %>

					<%= image_tag "/uploads/attaches/#{attach.file_name}", :size => "300x300" %>  
		<% end %>
	<% end %>			


	<%= image_tag @assets %>
	<div id="comments">
		<h2><%= @post.comments.count %> Комментарии</h2>
		<%= render @post.comments %>
		<h3>Добавить комментарий:</h3>
		<%= render "comments/form" %>
	</div>
</div>
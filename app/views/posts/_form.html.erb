<%= form_for @post, :html => { :multipart => true} do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :title, "Название" %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label "Категория" %> <br />
  <%= f.grouped_collection_select :subcategory_id, @categories, :subcategories, :title, :id, :title, {}, id: "simple-example" %>

  </br>
  <%= f.label :body, "Пост" %><br>
  <%= f.text_area :body %>
  </br>
  <%= f.label "Изображения" %> <br />
  <%= f.file_field :attached, :multiple => true %>

  <%= f.submit "Добавить"%>
<% end %>

<script>
      $(document).ready(function() {
    $('select#simple-example').select2();
    });
</script>


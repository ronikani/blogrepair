<p id="notice"><%= notice %></p>

<h1 class="center"><%=  @category.title %></h1>

<% Subcategory.where(category_id: @category.id).each do |sub| %>
    <% Post.where(subcategory_id: sub.id).each do |post| %>
        <div class="post_wrapper">
   			 <h2 class="title"><%= link_to post.title, post %></h2>
    		 <p class="date_and_author"><%= post.created_at.strftime("%B %d, %Y") %></p>
 		 </div> 
    <% end %>
<% end %>

